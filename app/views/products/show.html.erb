<h1>Product Show</h1>

<% cache @product do %>
  <h3><%= @product.name %></h3>
  <p>
    <%= @product.description%>
  </p>
  <p >
    <%= image_tag @product.featured_image, style: "width: 200px; height: auto;" if @product.featured_image.attached? %>
  </p>
<% end %>

<%= render "inventory", product: @product %>

<%= link_to "Back", products_path %>
<% if authenticated? %>
  <%= link_to "Edit", edit_product_path(@product) %>
  <%= button_to "Delete", @product, method: :delete, data: {turbo_confirm: "Are you sure?"} %>
<% end %>
